    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections>
  
<startup>
  <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.0"/>
</startup>
  <appSettings>
    <add key="NewPassword" value="Pa55w0rd" />

    <add key="SitesXML" value="C:\Developments\MiniJXT\MiniJXT\JXTJobScienceIntegration\SitesWithConfiguration.xml"/>
    <add key="EnworldXML" value="C:\Developments\MiniJXT\MiniJXT\JXTJobScienceIntegration\Enworld.xml"/>
    <add key="ResumeFolder" value="C:\Temp\applications\"/>

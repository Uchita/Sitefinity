@model JXTNext.Sitefinity.Widgets.Authentication.Mvc.Models.JXTNextProfile.JXTNextProfilePreviewViewModel

@using JXTNext.Sitefinity.Widgets.Authentication.Mvc.Models.JXTNextProfile;
@using Telerik.Sitefinity.Frontend.Mvc.Helpers;

<div class="@Model.CssClass">
    <img src="@Model.AvatarImageUrl" alt="@Model.UserName" width="100" height="100" />
    <h3>@Model.DisplayName <small>(@Model.Nickname)</small></h3>
    <p>@Model.Email</p>
    <p>@Model.About</p>
    @if (Model.CanEdit && ViewBag.Mode == ViewMode.Both)
    {
        @Html.ActionLink(Html.Resource("EditProfileLink"), "EditProfile");
    }
</div>

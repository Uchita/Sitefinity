@model Telerik.Sitefinity.Frontend.Card.Mvc.Models.Card.CardViewModel
@using Telerik.Sitefinity.Frontend.Mvc.Helpers


@if (@Model.CssClass == "#ffffff")
{
    <section class="cta " style="background-color:@Model.CssClass">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-12 col-md-9">
                    <h2 style="color: #0088CF;">@Html.HtmlSanitize(Model.Heading)</h2>
                    <p>@Html.HtmlSanitize(Model.Description)</p>
                </div>
                <div class="col-12 col-md-auto ml-md-auto">
                    @if (!string.IsNullOrEmpty(Model.ActionName))
                    {
                        <a href="@Html.UrlSanitize(Model.ActionUrl)" class="btn btn-primary" role="button">@Model.ActionName</a>
                    }
                </div>
            </div>
        </div>
    </section>
}
else if (@Model.CssClass == "white-text")
{
    <section class="cta @Model.CssClass" style="background-image: url('@Model.SelectedSizeUrl');">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-12 col-md-9">
                    <h2 style="color: #ffffff;">@Html.HtmlSanitize(Model.Heading)</h2>
                    <p>@Html.HtmlSanitize(Model.Description)</p>
                </div>
                <div class="col-12 col-md-auto ml-md-auto">
                    @if (!string.IsNullOrEmpty(Model.ActionName))
                    {
                        <a href="@Html.UrlSanitize(Model.ActionUrl)" class="btn btn-primary" role="button">@Model.ActionName</a>
                    }
                </div>
            </div>
        </div>
    </section>
}

else
{
    <section class="cta simple-HT @Model.CssClass" style="background-image: url('@Model.SelectedSizeUrl');">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-12 col-md-9">
                    <h2>@Html.HtmlSanitize(Model.Heading)</h2>
                    <p>@Html.HtmlSanitize(Model.Description)</p>
                </div>
                <div class="col-12 col-md-auto ml-md-auto">
                    @if (!string.IsNullOrEmpty(Model.ActionName))
                    {
                        <a href="@Html.UrlSanitize(Model.ActionUrl)" class="btn btn-outline-white" role="button">@Model.ActionName</a>
                    }
                </div>
            </div>
        </div>
    </section>
}
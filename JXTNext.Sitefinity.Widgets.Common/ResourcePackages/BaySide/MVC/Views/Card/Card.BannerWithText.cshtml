@model Telerik.Sitefinity.Frontend.Card.Mvc.Models.Card.CardViewModel
@using Telerik.Sitefinity.Frontend.Mvc.Helpers
<section class="full-section @Model.CssClass">
    <div class="container">
        <div class="row align-items-stretch img-full-bg image-order">
            <div class="col-12 col-md-6 img-absolute-wrap ">
                <div class="img-absolute image-pos-left bg-image fadeInLeft wow  delay-1s" style="background-image: url('@Model.SelectedSizeUrl');"></div>
            </div>
            <div class="col-12 col-md-6 pt-5 pb-5 text-margin-left fadeInRight wow">
                @if (!string.IsNullOrEmpty(Model.Heading))
                {
                    if (Model.Heading == "Customer Service Charter")
                    {
                        <h2 id="CustomerServiceCharter">@Html.HtmlSanitize(Model.Heading)</h2>
                    }
                    else
                    {
                        <h2>@Html.HtmlSanitize(Model.Heading)</h2>
                    }
                }
                <p>
                    @Html.HtmlSanitize(Model.Description)
                </p>
                @if (Model.ActionName == "Resume Templates")
                {
                    <a href="@Html.UrlSanitize(Model.ActionUrl)" class="btn btn-outline-primary mt-4">@Model.ActionName</a>
                }
                else
                {
                    <a href="@Html.UrlSanitize(Model.ActionUrl)" target="_blank" class="btn btn-outline-primary mt-4">@Model.ActionName</a>
                }
            </div>
        </div>
    </div>
</section>

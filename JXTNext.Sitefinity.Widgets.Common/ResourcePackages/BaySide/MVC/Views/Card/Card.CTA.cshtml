@model Telerik.Sitefinity.Frontend.Card.Mvc.Models.Card.CardViewModel
@using Telerik.Sitefinity.Frontend.Mvc.Helpers

@if (Model.CssClass == "blue-btn")
{
    <section class="cta @Model.CssClass" style="background-image: url('@Model.SelectedSizeUrl');">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-12 text-center">
                    @if (!string.IsNullOrEmpty(Model.Heading))
                    {
                        <h2 class="text-white wow fadeInUp">@Html.HtmlSanitize(Model.Heading)</h2>
                        if (!string.IsNullOrEmpty(Model.Description))
                        {
                            <h3 class="text-white wow fadeInUp">@Html.HtmlSanitize(Model.Description)</h3>
                        }
                    }
                    else
                    {
                        if (!string.IsNullOrEmpty(Model.Description))
                        {
                            <h2 class="text-white">@Html.HtmlSanitize(Model.Description)</h2>
                        }
                    }

                    @if (!string.IsNullOrEmpty(Model.ActionName))
                    {
                        if (Model.CssClass == "_blank")
                        {
                            <a href="@Html.UrlSanitize(Model.ActionUrl)" target="@Model.CssClass" class="btn btn-primary" role="button">@Model.ActionName</a>
                        }
                        else
                        {
                            <a href="@Html.UrlSanitize(Model.ActionUrl)" class="btn btn-primary" role="button">@Model.ActionName</a>
                        }
                    }

                </div>
            </div>
        </div>
    </section>
}
else
{
    <section class="cta @Model.CssClass" style="background-image: url('@Model.SelectedSizeUrl');">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-12 text-center">
                    @if (!string.IsNullOrEmpty(Model.Heading))
                    {
                        <h2 class="text-white wow fadeInUp">@Html.HtmlSanitize(Model.Heading)</h2>
                        if (!string.IsNullOrEmpty(Model.Description))
                        {
                            <h3 class="text-white wow fadeInUp">@Html.HtmlSanitize(Model.Description)</h3>
                        }
                    }
                    else
                    {
                        if (!string.IsNullOrEmpty(Model.Description))
                        {
                            <h2 class="text-white">@Html.HtmlSanitize(Model.Description)</h2>
                        }
                    }

                    @if (!string.IsNullOrEmpty(Model.ActionName))
                    {
                        if (Model.CssClass == "_blank")
                        {
                            <a href="@Html.UrlSanitize(Model.ActionUrl)" target="@Model.CssClass" class="btn btn-outline-white" role="button">@Model.ActionName</a>
                        }
                        else
                        {
                            <a href="@Html.UrlSanitize(Model.ActionUrl)" class="btn btn-outline-white" role="button">@Model.ActionName</a>
                        }
                    }

                </div>
            </div>
        </div>
    </section>
}

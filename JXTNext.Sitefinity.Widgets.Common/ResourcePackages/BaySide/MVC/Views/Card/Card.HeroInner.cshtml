@model Telerik.Sitefinity.Frontend.Card.Mvc.Models.Card.CardViewModel
@using Telerik.Sitefinity.Frontend.Mvc.Helpers
@using Telerik.Sitefinity.Services;


@if (!Telerik.Sitefinity.Services.SystemManager.IsDesignMode || Telerik.Sitefinity.Services.SystemManager.IsPreviewMode)
{
    if (Model.CssClass == "small-banner no-h1")
    {
        <section class="ss hero-banner hero-banner-sm @Model.CssClass" data-parallax="scroll" data-position="0 0" data-speed="0.7" data-image-src="@Model.SelectedSizeUrl">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-12 text-center">
                        <div class="hero-title default-title">@Html.HtmlSanitize(Model.Heading)</div>
                        @if (!string.IsNullOrEmpty(Model.Description))
                        {
                            <p>@Html.HtmlSanitize(Model.Description)</p>
                        }
                        @if (!string.IsNullOrEmpty(Model.ActionName))
                        {
                            <p><a href="@Html.UrlSanitize(Model.ActionUrl)" class="btn btn-lg" role="button">@Model.ActionName</a></p>
                        }
                    </div>
                </div>
            </div>
        </section>
    }
    else
    {
        <section class="hero-banner hero-banner-sm @Model.CssClass" data-parallax="scroll" data-position="0 0" data-speed="0.9" data-image-src="@Model.SelectedSizeUrl">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-12 text-center">
                        <h1 class="animated fadeInUp">@Html.HtmlSanitize(Model.Heading)</h1>
                        @if (!string.IsNullOrEmpty(Model.Description))
                        {
                            <p>@Html.HtmlSanitize(Model.Description)</p>
                        }
                        @if (!string.IsNullOrEmpty(Model.ActionName))
                        {
                            <p><a href="@Html.UrlSanitize(Model.ActionUrl)" class="btn btn-lg" role="button">@Model.ActionName</a></p>
                        }
                    </div>
                </div>
            </div>
        </section>
    }

}
else
{
    <section class="hero-banner hero-banner-sm @Model.CssClass" style="background-image: url('@Model.SelectedSizeUrl');">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-12 text-center">
                    <h1 class="animated fadeInUp">@Html.HtmlSanitize(Model.Heading)</h1>
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <p>@Html.HtmlSanitize(Model.Description)</p>
                    }
                    @if (!string.IsNullOrEmpty(Model.ActionName))
                    {
                        <p><a href="@Html.UrlSanitize(Model.ActionUrl)" class="btn btn-lg" role="button">@Model.ActionName</a></p>
                    }
                </div>
            </div>
        </div>
    </section>
}

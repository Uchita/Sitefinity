@model Telerik.Sitefinity.Frontend.Card.Mvc.Models.Card.CardViewModel
@using Telerik.Sitefinity.Frontend.Mvc.Helpers

@*<div class="service-item col-12 col-sm-6 col-lg-3 text-center">*@
<img class="service-icon" src='@Model.SelectedSizeUrl' alt="Talent Sourcing" />
<div class="m-right">
    <h3 class="service-name">@Html.HtmlSanitize(Model.Heading)</h3>
    <p class="service-desc">
        @if (Model.Description.Length > 165)
        {
            @Html.HtmlSanitize(Model.Description.Substring(0, 165) + "...")
        }
        else
        {
            @Html.HtmlSanitize(Model.Description)
        }

    </p>
    <a href="@Html.UrlSanitize(Model.ActionUrl)" class="btn btn-link">@Model.ActionName</a>
</div>
@*</div>*@
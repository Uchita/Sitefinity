@model SitefinityWebApp.Mvc.Models.MultiCard.MultiCardViewModel
@using Telerik.Sitefinity.Frontend.Mvc.Helpers;


@foreach (var card in Model.Cards)
{
    <section class="cta" style="background-color:@Model.BackgroundColor">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-12 col-md-6 text-center">
                    <h3>@Html.HtmlSanitize(card.Heading)</h3>
                    <p>@Html.HtmlSanitize(card.Description)</p>
                </div>
                <div class="col-12 col-md-auto ml-md-auto">
                    @if (!string.IsNullOrEmpty(card.ActionName))
                    {
                        <a href="@Html.UrlSanitize(card.ActionUrl)" class="btn btn-outline-white" role="button">@card.ActionName</a>
                    }
                </div>
            </div>
        </div>
    </section>
}

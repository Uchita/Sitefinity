@model SitefinityWebApp.Mvc.Models.MultiCard.MultiCardViewModel
@using Telerik.Sitefinity.Frontend.Mvc.Helpers;



@foreach (var card in Model.Cards)
{

    <div class="leader-image">
        <div class="leader-thumb bg-image">
            <h1 class="default-logo"><img src="@Model.SelectedSizeUrl" alt=""></h1>
        </div>
        <h1 class="leader_logo">
            <img src="@card.SelectedSizeUrl" alt="">
        </h1>

    </div>
    <h3 class="leader-name">@Html.HtmlSanitize(card.Heading)</h3>
    <div class="leader-designation">@Model.GroupHeader</div>

    if (card.Description != null && card.Description.Length > 0)
    {
        <a href="javascript:void(0)" data-desc="@Html.HtmlSanitize(card.Description)" class="btn btn-link">
            @card.ActionName
        </a>
    }
}

@model SitefinityWebApp.Mvc.Models.MultiCard.MultiCardViewModel
@using Telerik.Sitefinity.Frontend.Mvc.Helpers;


<section class="g-section featured-insights pb-2">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center">
                @if (!string.IsNullOrEmpty(Model.GroupHeader))
                {
                    <h3>@Model.GroupHeader</h3>
                }
            
            </div>
        </div>

        <div id="featuredInsights" class="featured-carousel owl-carousel">
            @foreach (var card in Model.Cards)
            {

                <div class="item">
                    <img src="@card.SelectedSizeUrl" alt="@card.ImageAlternativeText">
                    <div class="carousel-content">
                        <div class="carousel-title">@Html.HtmlSanitize(card.Heading)</div>
                        <p>@Html.HtmlSanitize(card.Description)</p>
                    </div>
                    <div class="carousel-overlay"></div>
                    <div class="carousel-abs-content">@Html.HtmlSanitize(@card.ActionName)</div>
                </div>


            }
        </div>

    </div>
</section>

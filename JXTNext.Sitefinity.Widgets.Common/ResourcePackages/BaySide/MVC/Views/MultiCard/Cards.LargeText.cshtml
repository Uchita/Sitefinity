@model SitefinityWebApp.Mvc.Models.MultiCard.MultiCardViewModel
@using Telerik.Sitefinity.Frontend.Mvc.Helpers;
<section class="g-section">
    <div class="container">
        <div class="row">
            @{                        
                int count = 1;
            }
            @foreach (var card in Model.Cards)
            {
                if (count % 2 == 0)
                {
                    <div class="col-12 col-md-6 mt-5 mt-md-0">
                        @if (!string.IsNullOrEmpty(card.Heading))
                        {
                            <h3>@Html.HtmlSanitize(card.Heading)</h3>
                        }
                        @Html.HtmlSanitize(card.Description)
                        <a href="@Html.UrlSanitize(card.ActionUrl)" class="btn btn-outline-primary mt-4">@card.ActionName</a>
                    </div>
                }
                else
                {
                    <div class="col-12 col-md-6">
                        @if (!string.IsNullOrEmpty(card.Heading))
                        {
                            <h3>@Html.HtmlSanitize(card.Heading)</h3>
                        }
                        @Html.HtmlSanitize(card.Description)
                        <a href="@Html.UrlSanitize(card.ActionUrl)" class="btn btn-outline-primary mt-4">@card.ActionName</a>
                    </div>
                }



                count++;

            }

        </div>

    </div>
</section>
@model SitefinityWebApp.Mvc.Models.MultiCard.MultiCardViewModel
@using Telerik.Sitefinity.Frontend.Mvc.Helpers;


@if (Model.CssClass == "image-upload")
{
    <section class="cta job_feature" style="background-image: url('@Model.SelectedSizeUrl');">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-12 text-center">
                    @if (@Model.BackgroundColor == "#EFEFEF")
                    {
                        <h2 class="text-white">
                            @if (!string.IsNullOrEmpty(Model.GroupHeader))
                            {
                                @Html.HtmlSanitize(@Model.GroupHeader)
                            }
                        </h2>
                    }
                    else
                    {
                        <h2 class="text-white">
                            @if (!string.IsNullOrEmpty(Model.GroupHeader))
                            {
                                @Html.HtmlSanitize(@Model.GroupHeader)
                            }
                        </h2>
                    }

                    @if (@Model.Cards.Count == 1)
                    {
                        <a href="@Html.HtmlSanitize(@Model.Cards[0].ActionUrl)" class="btn btn-primary @Model.Cards[0].Heading">@Html.HtmlSanitize(@Model.Cards[0].ActionName)</a>
                    }
                    else if (@Model.Cards.Count == 2)
                    {
                        <a href="@Html.HtmlSanitize(@Model.Cards[0].ActionUrl)" class="btn btn-primary mr-4 @Model.Cards[0].Heading">@Html.HtmlSanitize(@Model.Cards[0].ActionName)</a>
                        <a href="@Html.HtmlSanitize(@Model.Cards[1].ActionUrl)" class="btn btn-primary dark-btn @Model.Cards[1].Heading">@Html.HtmlSanitize(@Model.Cards[1].ActionName)</a>
                    }
                </div>
            </div>
        </div>
    </section>
}
else
{
    <section class="cta job_feature" style="background-color:@Model.BackgroundColor">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-12 text-center">
                    @if (@Model.BackgroundColor == "#EFEFEF")
                    {
                        <h2 class="text-white">
                            @if (!string.IsNullOrEmpty(Model.GroupHeader))
                            {
                                @Html.HtmlSanitize(@Model.GroupHeader)
                            }
                        </h2>
                    }
                    else
                    {
                        <h2 class="text-white">
                            @if (!string.IsNullOrEmpty(Model.GroupHeader))
                            {
                                @Html.HtmlSanitize(@Model.GroupHeader)
                            }
                        </h2>
                    }

                    @if (@Model.Cards.Count == 1)
                    {
                        <a href="@Html.HtmlSanitize(@Model.Cards[0].ActionUrl)" class="btn btn-primary @Model.Cards[0].Heading">@Html.HtmlSanitize(@Model.Cards[0].ActionName)</a>
                    }
                    else if (@Model.Cards.Count == 2)
                    {
                        <a href="@Html.HtmlSanitize(@Model.Cards[0].ActionUrl)" class="btn btn-primary mr-4 @Model.Cards[0].Heading">@Html.HtmlSanitize(@Model.Cards[0].ActionName)</a>
                        <a href="@Html.HtmlSanitize(@Model.Cards[1].ActionUrl)" class="btn btn-primary dark-btn @Model.Cards[1].Heading">@Html.HtmlSanitize(@Model.Cards[1].ActionName)</a>
                    }
                </div>
            </div>
        </div>
    </section>
}


@model Telerik.Sitefinity.Frontend.SocialShare.Mvc.Models.SocialShareModel
@using Telerik.Sitefinity.Frontend.SocialShare.SocialShareHelpers
@using Telerik.Sitefinity.Frontend.Mvc.Helpers
@using Telerik.Sitefinity.Modules.Pages;

@{
    var shareUrl = SocialShareButtons.ShareUrl;
    var unencodedPageTitle = Model.ItemTitle != null ? Model.ItemTitle : SocialShareButtons.PageTitle;
    var pageTitle = HttpUtility.UrlEncode(unencodedPageTitle);
    var lastPart = shareUrl.Split('/');
    var socialUrl = lastPart[lastPart.Count() - 2];
}

@*@Html.StyleSheet(Url.WidgetContent("assets/dist/css/sf-social-share.min.css"), "head", false)
@Html.Script(ScriptRef.JQuery, "head", false)



@Html.Script(Url.WidgetContent("Mvc/Scripts/SocialShare/social-share.js"), "bottom", false)*@


<aside class="job-sidebar col-12 col-sm-12 col-md-4 pl-lg-4">

    <h3 class="mt-4 h3-heading">Share on Socials</h3>

    <ul class="inline-list socials-list p-0 mb-4">

        @foreach (var button in Model.SocialButtons)
        {
            switch (button.ButtonName)
            {
                case "Facebook":
                    <li class="mr-2">
                        <a href="#" class="fa fa-facebook" onclick="window.open('https://www.facebook.com/sharer/sharer.php?app_id=309437425817038&amp;sdk=joey&amp;u=@shareUrl&amp;display=popup&amp;ref=plugin', 'Facebook','toolbar=no,width=550,height=180'); return false"></a>
                    </li>
                    break;
                case "Twitter":
                    <li class="mr-2">
                        <a href="#" class="fa fa-twitter" onclick="window.open('http://twitter.com/share?url=@shareUrl', 'Twitter', 'toolbar=no,width=550,height=450'); return false"></a>
                    </li>
                    break;
                case "LinkedIn":
                    <li class="mr-2">
                        <a class="fa fa-linkedin" href="#" onclick="window.open('http://www.linkedin.com/shareArticle?mini=true&amp;url=@shareUrl&amp;title=@socialUrl', 'LinkedIn', 'toolbar=no,width=550,height=450', 'yes', 'center'); return false"> </a>
                    </li>
                    break;
                case "GooglePlusOne":
                    <li class="mr-2">
                        <a class="fa fa-google-plus" href="https://plus.google.com/share?url=@shareUrl" onclick="javascript:window.open(this.href,'', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=600,width=600');return false;"> </a>
                    </li>
                    break;
                case "Blogger":
                    <li class="mr-2">
                        <a class="fa fa-blogger" href="#" onclick="window.open('https://www.blogger.com/blogger.g?t&u=@shareUrl&n=@pageTitle', 'Blogger','toolbar=no,width=550,height=550'); return false" title="Share on Blogger"></a>
                    </li>
                    break;
                case "Delicious":
                    <li class="mr-2">
                        <a class="fa fa-delicious" href="#" onclick="window.open('https://delicious.com/save?v=5&noui&jump=close&url=@shareUrl&amp;title=@pageTitle', 'delicious','toolbar=no,width=550,height=550'); return false;"> </a>
                    </li>
                    break;
                case "Tumblr":
                    <li  class="mr-2"><a class="fa fa-tum" href="#"></a></li>
                    break;
                case "GoogleBookmarks":
                    <li class="mr-2">
                        <a class="fa fa-bookmark" href="#" onclick="window.open('https://www.google.com/bookmarks/mark?op=add&bkmk=@shareUrl&title=@pageTitle', 'Google bookmarks','toolbar=no,width=900,height=550'); return false" title="Share on GoogleBookmarks"> </a>
                    </li>
                    break;
                case "Digg":
                    <li class="mr-2">
                        <a class="fa fa-digg" href="#" onclick="window.open('http://digg.com/submit?url=@shareUrl&title=@pageTitle', 'Digg','toolbar=no,width=550,height=550'); return false" title="Share on Digg"></a>
                    </li>
                    break;
                case "MySpace":
                    <li class="mr-2">
                        <a class="fa fa-space-shuttle" href="#" onclick="window.open('http://myspace.com/Modules/PostTo/Pages/?u=@shareUrl&t=@pageTitle', 'My Space','toolbar=no,width=550,height=550'); return false" title="Share on MySpace"></a>
                    </li>
                    break;
                case "StumbleUpon":
                    <li class="mr-2">
                        <a class="fa fa-stumbleupon" href="#" onclick="window.open('http://stumbleupon.com/submit?url=@shareUrl&title=@pageTitle', 'Stumble upon','toolbar=no,width=550,height=550'); return false" title="Share on StumbleUpon"></a>
                    </li>
                    break;
                case "Reddit":
                    <li class="mr-2">
                        <a class="fa fa-reddit" href="#" onclick="window.open('http://www.reddit.com/submit?newwindow=1&url=@shareUrl&title=@pageTitle', 'Reddit','toolbar=no,width=870,height=550'); return false" title="Share on Reddit"></a>
                    </li>
                    break;

                case "MailTo":
                    <li class="mr-2">
                        <a class="fa fa-mailchimp" onclick="window.open('mailto:?body=@shareUrl&subject=@pageTitle', 'MailTo', 'toolbar=no,width=550,height=550'); return false" title="Tell a friend"> </a>
                    </li>
                    break;
                default:
                    break;
            }
        }
    </ul>


</aside>
@model Telerik.Sitefinity.Frontend.Card.Mvc.Models.Card.CardViewModel
@using Telerik.Sitefinity.Frontend.Mvc.Helpers

<div class="hp-next-step-box" style="background-image: url('@Model.SelectedSizeUrl')">
    <div class="hp-next-step-desc">
        <p>@Html.HtmlSanitize(Model.Heading)</p>
    </div>
    @if (!string.IsNullOrEmpty(Model.ActionName))
    {
    <div class="hp-next-step-btn">
        <a href="@Html.UrlSanitize(Model.ActionUrl)" title="@Html.HtmlSanitize(Model.Heading)" class="btn-primary btn-custom">@Model.ActionName</a>
    </div>
    }
</div>
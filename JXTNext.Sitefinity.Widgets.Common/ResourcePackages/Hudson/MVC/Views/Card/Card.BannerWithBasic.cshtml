@model JXTNext.Sitefinity.Widgets.Feather.Mvc.Models.Card.JXTNextCardViewModel
@using Telerik.Sitefinity.Frontend.Mvc.Helpers;
@using JXTNext.Sitefinity.Media.Mvc.Helpers;


<div class="page-section banner-with-basic @Model.CssClass" style="background-image: url('@ImageHelper.GetImageUrl(Model.CardImage,"banner2048")')">
    <div class="visible-xs image-wrap">
        <img src="@Model.SelectedSizeUrl" alt="@Model.Heading" />
    </div>
    <div class="container">
        <div class="row ">
            <div class="col-lg-6 col-md-8 col-xs-12">
                <div class="thumbnail card-basic ">
                    <div class="caption">
                        @if (!string.IsNullOrEmpty(Model.ActionUrl))
                        {
                            <p class="color-light text-uppercase font-medium "><small>@Model.ActionName</small></p>
                        }
                        <h1>
                            @if (!string.IsNullOrEmpty(Model.ActionUrl))
                            {
                                <a href="@Html.UrlSanitize(Model.ActionUrl)" title="@Model.Heading">
                                    @Html.HtmlSanitize(Model.Heading)
                                </a>
                            }
                            else
                            {
                                @Html.HtmlSanitize(Model.Heading)
                            }
                        </h1>
                        <p class="banner-with-basic-summary">@Html.HtmlSanitize(Model.Description)</p>
                        @if (!string.IsNullOrEmpty(Model.ActionUrl))
                        {
                            <a href="@Html.UrlSanitize(Model.ActionUrl)" class="btn btn-more" title="@Model.Heading" role="button"></a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@model JXTNext.Sitefinity.Widgets.Feather.Mvc.Models.Card.JXTNextCardViewModel
@using Telerik.Sitefinity.Frontend.Mvc.Helpers;
@using JXTNext.Sitefinity.Media.Mvc.Helpers;

@if (!string.IsNullOrEmpty(Model.SelectedSizeUrl))
{
    <div class="@Model.CssClass jumbotron-container">
        <div class="jumbotron" style="background: url('@ImageHelper.GetImageUrl(Model.CardImage,"banner2048")') top center no-repeat; background-size: 100% auto;">
            <div class="jumbotron-content">
                <h1>@Html.HtmlSanitize(Model.Heading)</h1>
                <p>@Html.HtmlSanitize(Model.Description)</p>
                @if (!string.IsNullOrEmpty(Model.ActionName))
                {
                    <p><a href="@Html.UrlSanitize(Model.ActionUrl)" class="btn btn-lg" role="button" title="@Model.ActionName">@Model.ActionName</a></p>
                }
            </div>
        </div>
    </div>
}
else
{
    <style>
        .page-wrapper main {
            padding-top: 195px;
        }
    </style>
    <script>
        $(document).ready(function () {
            $(".page-wrapper main").css({ "padding-top": $("#header").outerHeight() });
        });
    </script>
}

<style>
    header .header {
        background: #197e84;
    }

        header .header.navbar-fixed-top {
            background: transparent;
        }

    header .navbar-fixed-top:before {
        background: rgb(25, 126, 132);
        /*background: rgba(25, 126, 132,.8);*/
    }

    header .navbar.navbar-default .navbar-nav > li .decoration {
        background: #FFF;
    }
</style>
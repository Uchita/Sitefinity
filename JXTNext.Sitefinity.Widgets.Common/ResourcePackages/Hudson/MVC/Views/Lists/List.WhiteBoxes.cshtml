@model Telerik.Sitefinity.Frontend.Mvc.Models.ContentListViewModel
@using Telerik.Sitefinity.Frontend.Lists.Mvc.Models;
@using Telerik.Sitefinity.Frontend.Mvc.Helpers;

<div class="white-box-list row same-height-wrapper clearfix @Model.CssClass">
    @*@foreach (var item in Model.Items)
        {*@
    @{
        var items = Model.Items.ToArray();
    }
@if (items.Count() == 2)
{
    <div class="col-md-2"></div>
}
else if (items.Count() == 1)
{
    <div class="col-md-4"></div>
}
    @foreach (var item in Model.Items)
    {
        
        <div class="col-md-4 col-sm-6 col-xs-12">
            <div class="white-box same-height-box">
                <div @Html.InlineEditingAttributes(Model.ProviderName, Model.ContentType.FullName, (Guid)item.Fields.Id)
                     @Html.InlineEditingFieldAttributes("Title", "ShortText") class="color-highlight white-box-title">
                    @item.Fields.Title
                </div>
                <ul class="white-box-ul">
                    @foreach (var listItem in ((ListViewModel)item).ListItemViewModel.Items)
                    {
                        <li @Html.InlineEditingAttributes(Model.ProviderName, ((ListViewModel)item).ListItemViewModel.ContentType.FullName, (Guid)listItem.Fields.Id)>
                            <div @Html.InlineEditingFieldAttributes("Title", "ShortText")>
                                @listItem.Fields.Title
                            </div>
                        </li>
                    }
                </ul>
            </div>
        </div>
    }
</div>

@model Telerik.Sitefinity.Frontend.Card.Mvc.Models.Card.CardViewModel
@using Telerik.Sitefinity.Frontend.Mvc.Helpers

<span class="image" style="background-image: url(@Model.SelectedSizeUrl);"></span>
<div class="under">
    <div class="cntr">
        <h2 class="title">@Html.HtmlSanitize(Model.Heading)</h2>
        @Html.HtmlSanitize(Model.Description)
        @if (!string.IsNullOrEmpty(Model.ActionName))
        {
        <a href="@Html.UrlSanitize(Model.ActionUrl)" class="read_btn"><span>@Model.ActionName</span></a>
        }
    </div>
</div>

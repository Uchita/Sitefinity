@model Telerik.Sitefinity.Frontend.Mvc.Models.ContentDetailsViewModel

@using System.Collections;
@using System.Linq;
@using Telerik.Sitefinity.Frontend.DynamicContent.WidgetTemplates.Fields.Helpers;
@using Telerik.Sitefinity;
@using Telerik.Sitefinity.Data.ContentLinks;
@using Telerik.Sitefinity.Frontend.Mvc.Helpers;
@using Telerik.Sitefinity.Libraries.Model;
@using Telerik.Sitefinity.Localization;
@using Telerik.Sitefinity.Model;
@using Telerik.Sitefinity.Model.ContentLinks;
@using Telerik.Sitefinity.Modules.Pages;
@using Telerik.Sitefinity.Pages.Model;
@using Telerik.Sitefinity.Modules.Libraries;
@using Telerik.Sitefinity.Taxonomies;
@using Telerik.Sitefinity.Taxonomies.Model;

<div class="consultant-detail full_width">
    <div class="row">
        <div class="col-md-5">
            @if (Model.Item.Fields.Pic != null)
            {
                <figure>
                    <img class="consultant-img img-responsive" src="@MediaContentExtensions.ResolveThumbnailUrl(Model.Item.Fields.Pic.DataItem, "thumb350")" alt="@Model.Item.Fields.ConsultantName">
                    @if (!string.IsNullOrWhiteSpace(@Model.Item.Fields.LinkedInProfileUrl))
                    {
                        <figcaption>
                            <a class="btn-small" href="@Model.Item.Fields.LinkedInProfileUrl" rel="noopener" target="_blank" title="Follow this recruiter">CONNECT WITH ME ON LINKEDIN</a>
                        </figcaption>
                    }
                </figure>
            }

            <div class="clearfix"></div>

            <div class="contact">
                @*<h4>RECRUITMENT CONSULTANT:</h4>*@
                <p>
                    @if (!string.IsNullOrWhiteSpace(@Model.Item.Fields.PhoneNumber))
                    {
                        <a href="tel:@Model.Item.Fields.PhoneNumber" title="Call Us"><i aria-hidden="true" class="fa fa-phone"></i>@Model.Item.Fields.PhoneNumber</a>
                    }<br />

                    @if (!string.IsNullOrWhiteSpace(@Model.Item.Fields.Email))
                    {
                        <a href="mailto:@Model.Item.Fields.Email" title="Mail Us"><i aria-hidden="true" class="fa fa-envelope"></i>@Model.Item.Fields.Email</a>

                    }
                    <br />
                    @if (!string.IsNullOrWhiteSpace(@Model.Item.Fields.LinkedInProfileUrl))
                    {
                    <a href="@Model.Item.Fields.LinkedInProfileUrl" rel="noopener" target="_blank" title="Linkedin"><i aria-hidden="true" class="fab fa-linkedin-in"><span class="hidden">icon</span></i>@Model.Item.Fields.LinkedInProfileName</a>
                    }
                </p>

            </div>
        </div>
        <div class="col-md-7 consultant-decription">

            <h3>@Html.HtmlSanitize((string)Model.Item.Fields.ConsultantName)</h3>
            @if (!string.IsNullOrWhiteSpace(@Model.Item.Fields.LinkedInProfileUrl))
            {
                <span><a href="@Model.Item.Fields.LinkedInProfileUrl" target="_blank" title="linkedin"><i class="fab fa-linkedin-in"><!-- linkedin --></i></a></span>
            }

            @if (!string.IsNullOrWhiteSpace(@Model.Item.Fields.TwitterProfileUrl))
            {
                <span><a href="@Model.Item.Fields.TwitterProfileUrl" target="_blank" title="twitter"><i class="fab fa-twitter"><!-- twitter --></i></a></span>
            }

            <p class="job-title">@Html.HtmlSanitize((string)Model.Item.Fields.Position)</p>

            <p>@Html.HtmlSanitize((string)Model.Item.Fields.Bio)</p>
        </div>



    </div>
</div>

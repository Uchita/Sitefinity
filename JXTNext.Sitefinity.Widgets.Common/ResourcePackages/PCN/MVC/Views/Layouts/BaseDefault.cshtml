@using System.Web.Mvc;
@using Telerik.Sitefinity.Frontend.Mvc.Helpers;
@using Telerik.Sitefinity.Modules.Pages;
@using Telerik.Sitefinity.UI.MVC;
@using Telerik.Sitefinity.Services;

<!DOCTYPE html>
<html @Html.RenderLangAttribute()>
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=2.0, user-scalable=1" />
    <meta charset="utf-8" />
    <title></title>

    @Html.Section("head")
    @Html.StyleSheet(Url.Content("https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"), "head")
    @Html.StyleSheet(Url.Content("~/ResourcePackages/PCN/assets/dist/css/fontawesome-all.css"), "head")
    @Html.StyleSheet(Url.Content("~/ResourcePackages/PCN/assets/dist/css/owl.carousel.css"), "head")
    @Html.StyleSheet(Url.Content("~/ResourcePackages/PCN/assets/dist/css/style.css"), "head")
    @Html.StyleSheet(Url.Content("~/ResourcePackages/PCN/assets/dist/css/responsive.css"), "head")

</head>

<body>
    @Html.Partial("~/ResourcePackages/Hudson/MVC/partial/TagManagerBody.cshtml")
    @Html.Section("top")

    <header class="header">
        @Html.SfPlaceHolder("Header")
    </header>
    <main class="full_width">
        <div class="big_container">
            @Html.SfPlaceHolder("Main")
        </div>
    </main>
    <footer class="full_width">
        @Html.SfPlaceHolder("Footer")
    </footer>

    @* Inline editing scripts and helpers. They should be available only when inline editing is possible. *@
    @*@if (Html.ShouldRenderInlineEditing())
        {
            @Html.Script(ScriptRef.MicrosoftAjax, "top")
            @Html.Script(ScriptRef.MicrosoftAjaxCore, "top")
            @Html.Script(ScriptRef.JQuery, "top")

            @Html.Script(Url.EmbeddedResource("Telerik.Sitefinity.Resources.Reference", "Telerik.Sitefinity.Resources.Scripts.jquery.ba-outside-events.min.js"), "top")
            @Html.Script(ScriptRef.KendoAll, "top")
            @Html.Script(ScriptRef.KendoTimezones, "top")
            @Html.Script(Url.EmbeddedResource("Telerik.Sitefinity.Resources.Reference", "Telerik.Sitefinity.Resources.Scripts.RequireJS.require.min.js"), "top")
            @Html.InlineEditingManager(false)
        }*@

    @Html.Section("bottom")
    @*@Html.Script("https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js", "bottom")*@

    @if (!Telerik.Sitefinity.Services.SystemManager.IsDesignMode || Telerik.Sitefinity.Services.SystemManager.IsPreviewMode)
    {
        @Html.Script("https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js", "bottom")
    }

    @Html.Script("/ResourcePackages/PCN/assets/dist/js/owl.carousel.min.js", "bottom")
    @Html.Script("/ResourcePackages/PCN/assets/dist/js/custom.js", "bottom")


</body>
</html>
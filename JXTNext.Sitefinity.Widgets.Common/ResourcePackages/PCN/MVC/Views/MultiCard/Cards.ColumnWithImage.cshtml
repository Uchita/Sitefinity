@model SitefinityWebApp.Mvc.Models.MultiCard.MultiCardViewModel
@using Telerik.Sitefinity.Frontend.Mvc.Helpers;



<span class="image" style="background-image: url(@Model.SelectedSizeUrl);"></span>
<div class="under">

    <div class="cntr">
        <h2 class="title">@Html.HtmlSanitize(Model.GroupHeader)</h2>

        @foreach (var card in Model.Cards)
        {
            if (!string.IsNullOrEmpty(card.ActionName))
            {
                <a href="@Html.UrlSanitize(card.ActionUrl)" class="read_btn btn-space"><span>@card.ActionName</span></a>
            }
        }
    </div>

</div>
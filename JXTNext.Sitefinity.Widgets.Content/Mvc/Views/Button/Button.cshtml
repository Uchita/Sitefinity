@model JXTNext.Sitefinity.Widgets.Content.Mvc.Models.Button.ButtonViewModel

@using Telerik.Sitefinity.Frontend.Mvc.Helpers;

@if (string.IsNullOrWhiteSpace(Model.ButtonAlignment))
{
    <a href="@Html.UrlSanitize(Model.ActionUrl)"
       role="button"
       class="@Model.CssClass"
       target="@Model.Target">@Html.HtmlSanitize(Model.ButtonText)</a>
}
else
{
    <div class="text-@Model.ButtonAlignment">
        <a href="@Html.UrlSanitize(Model.ActionUrl)"
           role="button"
           class="@Model.CssClass"
           target="@Model.Target">@Html.HtmlSanitize(Model.ButtonText)</a>
    </div>
}

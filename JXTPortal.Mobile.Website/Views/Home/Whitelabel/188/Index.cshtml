                    <option value="@item.Key">@item.Value</option>    
                }
            </select></span>
        </li>
		 <li><span class="inputFieldsWrap">
		  	  <select id="WorkTypeId" name="WorkTypeId">
		  	      <option value="0" selected>All Worktype</option>

		  	      {   
		  	          <option value="@item.Key">@item.Value</option>    
		  	      }
		  	  </select>
		  </span>
        </li>
		
                <li>
            <span class="inputFieldsWrap"><select id="LocationId" name="LocationId">
                <option value="0" selected>All Location</option>
                @foreach (var item in Model.Locations)
                {   
                    <option value="@item.Key">@item.Value</option>    

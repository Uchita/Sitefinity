<?xml version="1.0"?>
<configuration>
  <configSections>
    <section name="JXTPortal.Data" type="JXTPortal.Data.Bases.NetTiersServiceSection, JXTPortal.Data" allowDefinition="MachineToApplication"

restartOnExternalChanges="true"/>
  </configSections>
  <appSettings>

    <add key="AdminEmail" value="naveen@jxt.com.au"/>
    <add key="SitesXML" value="C:\inetpub\Windows Application\MiniJXT - FTP Applications\SitesWithConfiguration.xml"/>
    <add key="ApplicationXML" value="C:\inetpub\Windows Application\MiniJXT - FTP Applications\JobApplication.xml"/>
    <add key="ResumeFolder" value="C:\inetpub\Websites\Minijxt\uploads\applications\resume\"/>
    <!-- C:\inetpub\Websites\Minijxt\uploads\applications

\resume\ -->
    <add key="CoverletterFolder" value="C:\inetpub\Websites\Minijxt\uploads\applications\coverletter\"/>
    <!-- C:\inetpub\Websites\Minijxt\uploads

\applications\\coverletter\ -->

  </appSettings>
  <system.net>
    <mailSettings>
      <!--<smtp deliveryMethod="SpecifiedPickupDirectory">
			<network host="ignored" />
			<specifiedPickupDirectory pickupDirectoryLocation="C:\JXTMail" />
		</smtp>-->

      <smtp deliveryMethod="Network" from="testuser@jxt.com">
        <network defaultCredentials="false" host="10.0.20.87" port="25" />
      </smtp>
    </mailSettings>
  </system.net>
  <connectionStrings>
    <add name="JXTPortal.Data.ConnectionString" connectionString="Application Name=MiniJXT FTP JobApplications;
							Initial Catalog=MiniJXT_App;
							Data Source=10.0.20.79;
							User Id=jxtwebuser;
							Password=@jxtw3bUser*"/>
    <add name="JXTMemberTransfer.Properties.Settings.MiniJXTConnectionString" connectionString="Application Name=MiniJXT FTP JobApplications;
							Initial Catalog=MiniJXT_App;
							Data Source=10.0.20.79;
							User Id=jxtwebuser;
							Password=@jxtw3bUser*" providerName="System.Data.SqlClient"/>
  </connectionStrings>
  <JXTPortal.Data defaultProvider="SqlNetTiersProvider">
    <providers>
      <!--
                           *** SqlClient Provider ***
                                  connectionStringName: sqlclient connection string to the db
                                  useStoredProcedure: if true, indicates that we use the stored procedures, otherwise, we use parametrized queries 

that are embedded.
                     -->
      <add name="SqlNetTiersProvider" type="JXTPortal.Data.SqlClient.SqlNetTiersProvider, JXTPortal.Data.SqlClient"

connectionStringName="JXTPortal.Data.ConnectionString" providerInvariantName="System.Data.SqlClient"

entityFactoryType="JXTPortal.Entities.EntityFactory" useEntityFactory="true" enableEntityTracking="false" enableMethodAuthorization="false"

useStoredProcedure="true" defaultCommandTimeout="30"/>
      <!--
                           *** WebserviceClient Provider ***
                           The url parameter indicates the webservices url (ex: http://localhost/JXTPortal/JXTPortalServices.aspx)
                           <add
                                  name="WsNetTiersProvider"
                                  type="JXTPortal.Data.WebServiceClient.WsNetTiersProvider, JXTPortal.Data.WebServiceClient"
                                  url="/JXTPortalServices.asmx" />
                     -->
    </providers>
  </JXTPortal.Data>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.0"/>
  </startup>
</configuration>

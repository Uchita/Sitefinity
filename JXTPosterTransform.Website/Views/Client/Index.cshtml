@using JXTPosterTransform.Website.Models
@model List<ClientDisplayModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <h1 class="page-header">
        Client Accounts</h1>
    <a href="/client/edit" class="btn btn-default pull-right">+ Create New Client Account</a>
</div>
<table class="table table-striped table-bordered table-hover dataTable no-footer">
    <thead>
        <tr>
            <th>
                ClientID
            </th>
            <th>
                Name
            </th>
            <th>
                SiteID
            </th>
            <th>
                Valid Status
            </th>
            <th>
                Created Date
            </th>
            <th>
                Last Modified
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (ClientDisplayModel c in Model)
        {
            <tr>
                <td>@c.clientID
                </td>
                <td>@c.name
                </td>
                <td>@c.siteID
                </td>
                <td>@c.valid.ToString()
                </td>
                <td>@(string.Format("{0:dd-MMM-yyyy}", c.createdDate))
                </td>
                <td>@(string.Format("{0:dd-MMM-yyyy}", c.lastModifiedDate))
                </td>
                <td>
                    <a href="/client/edit/@c.clientID">Edit</a> <a href="/clientsetup?clientID=@c.clientID">
                        Setups</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<label>Which social link options you want to use?</label><br />
<p>Please select the checkbox and enter full path in corresponding text box</p> <br /><br />

<div ng-controller="SimpleCtrl" class="list-group list-group-endless" kendo-sortable k-options="sortableOptions" k-on-change="sortItems(kendoEvent)" k-ignore="'input'">
    <div class="list-group-item"
         ng-repeat="item in list track by item.Id"
         ng-class="list-group-item-draggable">

        <div class="row">
            <div class="col-xs-1">
                <span class="handler list-group-item-drag"></span>
            </div>
            <div class="col-xs-2">
                <div class="checkbox">
                    <span><label><input type="checkbox" ng-model="item.Selected" />{{item.Title}}</label></span>
                    @*<span sf-shrinked-breadcrumb="{{item.Title}}" sf-max-length="60"></span>*@
                </div>
            </div>
            <div class="col-xs-9">
                <span><input class="form-control" type="text" ng-model="item.Url" ng-disabled="item.Selected == false" /></span>
            </div>
        </div>


    </div>
</div>

<expander expander-title="More Options">
    <style-dropdown selected-class="properties.CssClass.PropertyValue"></style-dropdown>

    <div class="form-group">
        <label for="navCssClass">CSS classes</label>
        <input type="text" id="navCssClass" ng-model="properties.CssClass.PropertyValue" class="form-control" />
    </div>
</expander>

@model Telerik.Sitefinity.Frontend.Card.Mvc.Models.Card.CardViewModel
@using Telerik.Sitefinity.Frontend.Mvc.Helpers
<div id="jn_banner" class="@Model.CssClass" style="background-image: url(@Model.SelectedSizeUrl)">
    
    @if (!String.IsNullOrEmpty(Model.ActionUrl))
    {
        <div class="bg-video video-area">
            <video autoplay loop muted>
                <source src="@Model.ActionUrl" type="video/mp4">
            </video>
        </div>

    }
    <div class="container">
        <div class="row">
            <div class="col-12 col-md-7">
                @if (!string.IsNullOrEmpty(Model.Heading))
                {
                    <h1>@Html.HtmlSanitize(Model.Heading)</h1>
                }
                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <p>@Html.HtmlSanitize(Model.Description)</p>
                }
            </div>
        </div>
    </div>
</div>

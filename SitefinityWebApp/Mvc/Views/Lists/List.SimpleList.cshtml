@model Telerik.Sitefinity.Frontend.Mvc.Models.ContentListViewModel
@using Telerik.Sitefinity.Frontend.Lists.Mvc.Models;
@using Telerik.Sitefinity.Frontend.Mvc.Helpers;

    <div class="@Model.CssClass">

        @foreach (var item in Model.Items)
        {
        if(item.Fields.Title != null) {
        <h3 @Html.InlineEditingAttributes(Model.ProviderName, Model.ContentType.FullName, (Guid)item.Fields.Id)
            @Html.InlineEditingFieldAttributes("Title", "ShortText" ) role="heading">

            @item.Fields.Title
        </h3>
        }
        if(((ListViewModel)item).ListItemViewModel != null) {
        <ul role="list">
            @foreach (var listItem in ((ListViewModel)item).ListItemViewModel.Items)
            {
            <li @Html.InlineEditingAttributes(Model.ProviderName, ((ListViewModel)item).ListItemViewModel.ContentType.FullName, (Guid)listItem.Fields.Id) role="listitem">
                <div @Html.InlineEditingFieldAttributes("Title", "ShortText" )>
                    <text>@listItem.Fields.Title</text>
                </div>
            </li>
            }
        </ul>
        }
        }

    </div>

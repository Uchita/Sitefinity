@model SitefinityWebApp.Mvc.Models.MultiCard.MultiCardViewModel
@using Telerik.Sitefinity.Frontend.Mvc.Helpers;
<section class="g-section">
    <div class="container">
        @if (!string.IsNullOrEmpty(Model.GroupHeader))
        {
            <h3 class="text-center mb-5">@Model.GroupHeader</h3>
        }

        <div id="internalJobs" class="featured-carousel owl-carousel">
            @foreach (var card in Model.Cards)
            {
                <div class="item">
                    @if (!string.IsNullOrEmpty(card.Heading))
                    {
                        <h4>@Html.HtmlSanitize(card.Heading)</h4>
                    }
                    @Html.HtmlSanitize(card.Description)
                    <a href="@Html.UrlSanitize(card.ActionUrl)" class="btn btn-link pl-0">> View job</a>
                </div>
            }

        </div>

    </div>
</section>
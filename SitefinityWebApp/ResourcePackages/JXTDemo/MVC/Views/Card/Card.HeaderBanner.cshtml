@model Telerik.Sitefinity.Frontend.Card.Mvc.Models.Card.CardViewModel

<div id="jn_banner" class="banner-single banner-bg bg-cover @Model.CssClass" style="background-image:url('@Model.SelectedSizeUrl')">
    <div class="banner-item">
        <div class="slide-content container">
            <div class="row align-items-center">
                <div class="col">
    @if (!string.IsNullOrEmpty(Model.Heading))
    {   
        <h1 class="pg_hdr-title">@Html.Raw(Model.Heading)</h1>
    }
    @if (!string.IsNullOrEmpty(Model.Description))
    {
        <div class="pg_hdr-desc">@Html.Raw(Model.Description)</div>
    }
    @if (!string.IsNullOrEmpty(Model.ActionName))
    {
        <a href="@Model.ActionUrl" class="button large hollow white">
            @Model.ActionName
        </a>
    }
                </div>
            </div>
        </div>
    </div>
</div>